{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "checkJs": true,
        "allowJs": true,
        "strict": false,
        "baseUrl": "./src",
        "paths": {
            "@common/*": [
                "common/*"
            ],
            "@client/*": [
                "client/*"
            ],
            "@server/*": [
                "server/*"
            ]
        }
    },
    "include": [
        "src"
    ]
}