{
    "compilerOptions": {
        "types": [],
        "target": "ESNext",
        "module": "esnext",
        "moduleResolution": "bundler",
        "checkJs": true,
        "allowJs": true,
        "strict": false,
        "baseUrl": "./src",
        "paths": {
            "@solblade/common/*": [
                "common/*"
            ],
            "@solblade/client/*": [
                "client/*"
            ],
            "@solblade/server/*": [
                "server/*"
            ]
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "src/zold/*"
    ]
}