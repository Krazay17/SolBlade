    "start-server": "npm run start --workspace=src/server",
    "build": "vite build"
  },
  "dependencies": {
    "@dimforge/rapier3d-compat": "^0.19.2",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "three": "^0.179.1",
    "three-mesh-bvh": "^0.9.1"
  },
  "devDependencies": {
    "@types/three": "^0.180.0",
    "concurrently": "^9.2.1",
    "vite": "^7.0.6",
    "vite-plugin-top-level-await": "^1.6.0",
    "vite-plugin-wasm": "^3.5.0"
  }
}