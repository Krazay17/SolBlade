{
  "name": "solblade",
  "private": true,
  "type": "module",
  "workspaces": [
    "src/client",
    "src/server",
    "src/shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev-server\" \"vite\"",
    "dev-client": "vite",
